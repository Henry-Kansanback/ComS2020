<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventSplash">

    <TextView
        android:id="@+id/userIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome,"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/businessSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/eventsList"
        android:layout_centerVertical="true"
        android:text="Businesses" />

    <Button
        android:id="@+id/eventsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Events" />
    <Button
        android:id="@+id/newEventsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/eventsList"
        android:layout_centerVertical="true"
        android:text="New Event"
        />

</RelativeLayout>