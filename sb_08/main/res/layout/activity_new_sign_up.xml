<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newSignUp">

    <TextView
        android:id="@+id/eventToBeSigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="158dp" />

    <EditText
        android:id="@+id/totalParking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:text="Total Parking Available" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventid"
        android:text="input event id"
        android:layout_below="@id/sendSignup"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/sendSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/totalParking"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:text="Submit" />
</RelativeLayout>